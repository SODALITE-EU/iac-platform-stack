---
apiVersion: v1
kind: Secret
metadata:
  name: keycloak
  namespace: sodalite-services
type: Opaque
stringData:
  keycloak-admin-pw: ${KEYCLOAK_ADMIN_PASSWORD}
  keycloak-db-pw: ${KEYCLOAK_DB_PASSWORD}
  keycloak-realm: ${KEYCLOAK_REALM}
  client-id: ${KEYCLOAK_CLIENT_ID}
  client-secret: ${KEYCLOAK_CLIENT_SECRET}
  auth-url: https://keycloak.public-testbed.sodalite.eu/auth/realms/${KEYCLOAK_REALM}/protocol/openid-connect/auth
  token-url: https://keycloak.public-testbed.sodalite.eu/auth/realms/${KEYCLOAK_REALM}/protocol/openid-connect/token
  api-url: https://keycloak.public-testbed.sodalite.eu/auth/realms/${KEYCLOAK_REALM}/protocol/openid-connect/userinfo
  introspect-url: https://keycloak.public-testbed.sodalite.eu/auth/realms/${KEYCLOAK_REALM}/protocol/openid-connect/token/introspect